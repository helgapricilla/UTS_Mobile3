<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ellipse_blur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="75dp">

            <ImageView
                android:id="@+id/pp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/greetingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pp">

                <TextView
                    android:layout_width="438dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Hello, Good Morning"
                    android:textColor="#3a4750"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="Sophia!"
                    android:textColor="#191919"
                    android:textSize="25sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/notification"
                android:layout_width="20dp"
                android:layout_height="22.02dp"
                android:layout_margin="20dp"
                android:src="@drawable/notif"
                app:layout_constraintBottom_toBottomOf="@id/pp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pp" />

            <LinearLayout
                android:id="@+id/searchbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/searchbg"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/greetingText">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="Search"
                    android:textColor="#303841"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/searchbg">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_oren" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/exercise_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/girlstretch"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="NotSibling" />
                    <LinearLayout
                        android:id="@+id/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/exercise_img"
                        app:layout_constraintTop_toTopOf="@id/exercise_img"
                        app:layout_constraintBottom_toBottomOf="@id/exercise_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="-80dp"
                        android:layout_marginTop="-10dp"
                        android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="184dp"
                        android:layout_height="match_parent"
                        android:textStyle="normal"
                        android:maxLines="2"
                        android:fontFamily="@font/bebasneue_regular"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="Fit Young Woman Doing
                        Battle Stretch  Training"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="115dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:background="@drawable/textbg"
                            android:text="Start Exercise"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/dmsans_bold"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/barbel"
                        app:layout_constraintBottom_toBottomOf="@id/exercise_img"
                        app:layout_constraintStart_toStartOf="@id/exercise_text" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-15dp"
                app:layout_constraintTop_toBottomOf="@id/frame_exercise"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue_regular"
                    android:text="Select Your Goal"
                    android:textAllCaps="true"
                    android:textColor="#191919"
                    android:layout_marginBottom="10dp"
                    android:textSize="25sp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goal1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loose Weight"
                            android:fontFamily="@font/montserrat_medium"
                            android:background="@drawable/greybg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="13sp"
                            android:textColor="#303841"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/goal2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gain Weight"
                            android:fontFamily="@font/montserrat_medium"
                            android:background="@drawable/clickbg"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/goal3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Body Building"
                            android:fontFamily="@font/montserrat_medium"
                            android:background="@drawable/greybg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textColor="#303841"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/goal4"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/greybg"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:text="Healthy"
                            android:textColor="#303841"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/goal5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strength Training"
                            android:fontFamily="@font/montserrat_medium"
                            android:background="@drawable/greybg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textColor="#303841"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/goal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:text="Category"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="See all"
                        android:layout_marginRight="20dp"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="end" />
                </LinearLayout>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                </HorizontalScrollView>

                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/popular_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/category"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:text="Popular Exercise"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="See all"
                        android:textColor="#191919"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:src="@drawable/fullshot"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Shot Stretching Arm"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#191919"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginner"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textColor="#303841"/>

                        <View
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#707070"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/time"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 min"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textColor="#303841"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:src="@drawable/atheletepracticing"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Athlete Practicing Monochrome"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#191919"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginner"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textColor="#303841"/>

                        <View
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#707070"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/time"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 min"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textColor="#303841"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meal_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/popular_exercise"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:text="Meal Plans"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="See all"
                        android:gravity="end"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pinksalad"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Greek Salad with Lettuce, Green Onion"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textStyle="bold"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 kcal"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12sp"
                        android:textColor="#303841"/>
                </LinearLayout>
                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bluesalad"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salad of Fresh Vegetables"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="#191919"
                        android:fontFamily="@font/montserrat_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="270 kcal"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12sp"
                        android:textColor="#303841"/>
                </LinearLayout>
                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/additional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/meal_plans"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue_regular"
                        android:text="Additional Exercise"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="See all"
                        android:gravity="end"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="15sp" />
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/addImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add1"
                        android:background="@drawable/bgadd1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/add1TV"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Exercise with Jumping
                        Rope"
                        android:textColor="#191919"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:maxLines="2"
                        app:layout_constraintStart_toEndOf="@id/addImage1"
                        app:layout_constraintTop_toTopOf="parent" />
                    <LinearLayout
                        android:id="@+id/add1_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/add1TV"
                        app:layout_constraintStart_toStartOf="@id/add1TV"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/calories"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="110 kcal"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textColor="#303841"/>

                        <View
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#707070"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/time"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 min"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp"
                            android:textColor="#303841"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12sp"
                        android:textColor="#303841"
                        app:layout_constraintTop_toBottomOf="@id/add1_desc"
                        app:layout_constraintStart_toStartOf="@id/add1_desc"/>
                    <View
                        android:id="@+id/divider1"
                        android:layout_marginVertical="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        app:layout_constraintTop_toBottomOf="@id/addImage1"/>
                    <ImageView
                        android:id="@+id/addImage2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/add2"
                        android:background="@drawable/bgadd2"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/addImage1"
                        app:layout_constraintDimensionRatio="1:1"
                        android:cropToPadding="true"
                        />

                    <TextView
                        android:id="@+id/add2TV"
                        android:layout_width="272dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:maxLines="2"
                        android:text="Exercise with Holding Jumping
                        Rope"
                        android:textColor="#191919"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/addImage2"
                        app:layout_constraintTop_toTopOf="@id/addImage2" />

                    <LinearLayout
                        android:id="@+id/add2_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/add2TV"
                        app:layout_constraintStart_toStartOf="@id/add2TV"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/calories"
                            android:layout_gravity="center_vertical"/>

                        <TextView
